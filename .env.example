# ============================================
# Usability Testing Template - Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED: Supabase Configuration
# ============================================
# Get these from your Supabase project dashboard
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

VITE_SUPABASE_PROJECT_ID=your-project-id
VITE_SUPABASE_ANON_KEY=your-anon-key

# ============================================
# REQUIRED: Admin Access
# ============================================
# Password for accessing the admin dashboard at ?admin=true

VITE_ADMIN_PASSWORD=your-secure-password

# ============================================
# OPTIONAL: OpenAI Configuration
# ============================================
# Required only if you want AI analysis and audio transcription
# Get your key at https://platform.openai.com/api-keys

OPENAI_API_KEY=your-openai-key

# ============================================
# OPTIONAL: Test Configuration
# ============================================

# Title shown to participants
VITE_TEST_TITLE=Usability Test

# Figma prototype URL (embed URL format)
# Leave empty if not using a prototype
VITE_PROTOTYPE_URL=

# Feature toggles
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_SCREEN_RECORDING=true
